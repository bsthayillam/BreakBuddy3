<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bckgrnd1"
    tools:context="com.example.brenda.teatime.ChooseActivity">

    <TextView android:text="Choose Your Activity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/buttonMusic"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pictures"
        android:id="@+id/PicButton"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@+id/buttonMusic"
        android:layout_toRightOf="@+id/buttonMusic"
        android:layout_toEndOf="@+id/buttonMusic" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mini-Exercises"
        android:id="@+id/ExerciseButton"
        android:layout_below="@+id/buttonMusic"
        android:layout_alignLeft="@+id/buttonMusic"
        android:layout_alignStart="@+id/buttonMusic"
        android:layout_marginTop="57dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Videos"
        android:id="@+id/VideoButton"
        android:layout_alignBottom="@+id/ExerciseButton"
        android:layout_alignRight="@id/PicButton"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ExerciseButton"
        android:layout_toEndOf="@+id/ExerciseButton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Own Activity"
        android:id="@+id/OwnButton"
        android:layout_below="@+id/ExerciseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

</RelativeLayout>
